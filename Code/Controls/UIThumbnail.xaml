<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Inhuman.UIThumbnail"
	d:DesignWidth="160" d:DesignHeight="160" Width="150" Height="150" CacheMode="BitmapCache">

	<Grid x:Name="LayoutRoot" Margin="4" Tap="LayoutRoot_Tap">
		<Grid.Background>
			<SolidColorBrush Color="#FF282828"/>
		</Grid.Background>
		<Image Source="{Binding Bitmap}" Margin="4"/>
	</Grid>
</UserControl>